{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables": {
        "apiVersion": "2019-11-01"
    },
    "parameters": {
        "generalParam": {
            "type": "object",
            "metadata": {
                "description": "全般的なパラメータ"
            }
        },
        "resourceGroupParam":{
            "type": "object",
            "metadata": {
                "description": "リソースグループのパラメータ"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "[variables('apiVersion')]",
            "name": "[parameters('resourceGroupParam').name]",
            "location": "[parameters('generalParam').deploy.location]",
            "properties": "[parameters('resourceGroupParam').properties]"
        }
    ],
    "outputs": {
        "resourceGroupResourceId": {
            "type": "Object",
            "value": "[resourceId('MicrosMicrosoft.Resources/resourceGroups', parameters('resourceGroupParam').name)]"
        },
        "resourceGroupName": {
            "type": "Object",
            "value": "[parameters('resourceGroupParam').name]"
        }
    }
}
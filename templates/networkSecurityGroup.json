{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables": {
        "apiVersion": "2019-11-01"
    },
    "parameters": {
        "generalParam": {
            "type": "object",
            "metadata": {
                "description": "全般的なパラメータ"
            }
        },
        "networkSecurityGroupParam": {
            "type": "object",
            "metadata": {
                "description": "Network Security Group のパラメータ"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "[variables('apiVersion')]",
            "name": "[parameters('networkSecurityGroupParam').name]",
            "location": "[parameters('generalParam').deploy.location]",
            "properties": "[parameters('networkSecurityGroupParam').properties]"
        }
    ],
    "outputs": {
        "networkSecurityGroupResourceId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupParam').name)]"
        },
        "networkSecurityGroupName": {
            "type": "string",
            "value": "[parameters('networkSecurityGroupParam').name]"
        }
    }
}
{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables": {
        "apiVersion": "2019-07-01"
    },
    "parameters": {
        "generalParam": {
            "type": "object",
            "metadata": {
                "description": "全般的なパラメータ"
            }
        },
        "virtualMachineParam":{
            "type": "object",
            "metadata": {
                "description": "Virtual Machine のパラメータ"
            }
        },
        "networkInterfaceResourceId": {
            "type": "string",
            "metadata": {
                "description": "この Virtual Machine に紐づける Network Interface のリソース ID"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "[variables('apiVersion')]",
            "name": "[parameters('virtualMachineParam').name]",
            "location": "[parameters('generalParam').deploy.location]",
            "properties": {
                "hardwareProfile": "[parameters('virtualMachineParam').properties.hardwareProfile]",
                "storageProfile": "[parameters('virtualMachineParam').properties.storageProfile]",
                "osProfile": "[parameters('virtualMachineParam').properties.osProfile]",
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[parameters('networkInterfaceResourceId')]"
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "virtualMachineResourceId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Compute/virtualMachines', parameters('virtualMachineParam').name)]"
        },
        "virtualMachineName": {
            "type": "string",
            "value": "[parameters('virtualMachineParam').name]"
        }
    }
}
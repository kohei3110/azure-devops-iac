{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "generalParam":{
            "value":{
                "deploy": {
                    "location": "japaneast"
                }
            }
        },
        "networkSecurityGroupParam": {
            "value": {
                "name": "devops-pipelines-nsg001",
                "properties": {
                    "securityRules": [
                        {
                            "name": "SSH",
                            "properties": {
                                "priority": "100",
                                "sourceAddressPrefix": "xxx.xxx.xxx.xxx/32",
                                "sourcePortRange":"*",
                                "destinationAddressPrefix": "*",
                                "destinationPortRange": "22",
                                "protocol": "TCP",
                                "direction": "Inbound",
                                "access": "Allow",
                                "description": "指定したIPアドレスからのSSH接続を許可します"
                            }
                        }
                    ]
                }
            }
        }
    }
}